# ========================================
# MedSpaSync Pro Backend Environment Configuration
# ========================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-change-in-production
API_VERSION=2.0.0

# Database Configuration
DATABASE_URL=postgresql://ai_king:kingdom_secure_2024@localhost:5432/medspa_ai
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# AI Engine Configuration
MAX_WORKERS=4
BATCH_SIZE=100
MODEL_THRESHOLD=0.95
MODEL_PATH=./models/reconciliation_model.pkl

# HIPAA Compliance
HIPAA_COMPLIANCE_MODE=true
DATA_ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=2555

# Security Configuration
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# JWT Authentication
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# Data Encryption
ENCRYPTION_KEY=your-encryption-key-change-in-production
ENCRYPTION_ENABLED=true
ENCRYPTION_ALGORITHM=Fernet

# Session Management
SESSION_TIMEOUT_HOURS=1
SESSION_REDIS_DB=1
SESSION_CLEANUP_INTERVAL=3600

# Audit Logging
AUDIT_LOG_LEVEL=INFO
AUDIT_LOG_FILE=logs/audit.log
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_ROTATION_SIZE=100MB

# HIPAA Security
PHI_ENCRYPTION_REQUIRED=true
PHI_ACCESS_LOGGING=true
PHI_CONSENT_REQUIRED=true
PHI_DATA_MASKING=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
XSS_PROTECTION_ENABLED=true

# Monitoring
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
METRICS_ENDPOINT=/metrics

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=csv,xlsx,xls

# External Services
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

