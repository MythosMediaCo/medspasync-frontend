# MedSpaSync Pro Reporting System - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/medspasync"

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
JWT_SECRET="your-super-secure-jwt-secret-key-here"
ENCRYPTION_KEY="your-32-character-encryption-key-here"
NODE_ENV="production"

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================
UPLOAD_DIR="./uploads"
TEMPLATES_DIR="./templates"
REPORTS_DIR="./reports"
MAX_FILE_SIZE="100MB"
MAX_FILES_PER_UPLOAD=5

# ============================================================================
# POS INTEGRATION API KEYS
# ============================================================================
ZENOTI_API_KEY="your-zenoti-api-key"
ZENOTI_BASE_URL="https://api.zenoti.com"

VAGARO_API_KEY="your-vagaro-api-key"
VAGARO_BASE_URL="https://api.vagaro.com"

MINDBODY_API_KEY="your-mindbody-api-key"
MINDBODY_SITE_ID="your-mindbody-site-id"
MINDBODY_BASE_URL="https://api.mindbodyonline.com"

BOULEVARD_API_KEY="your-boulevard-api-key"
BOULEVARD_BASE_URL="https://api.boulevard.io"

ALLE_API_KEY="your-alle-api-key"
ALLE_BASE_URL="https://api.alle.com"

ASPIRE_API_KEY="your-aspire-api-key"
ASPIRE_BASE_URL="https://api.aspire.com"

# ============================================================================
# SUBSCRIPTION TIER CONFIGURATION
# ============================================================================
CORE_TIER_PRICE=299
PROFESSIONAL_TIER_PRICE=499
CORE_TIER_MAX_FILES=5
CORE_TIER_MAX_FILE_SIZE="50MB"
PROFESSIONAL_TIER_MAX_FILES=-1
PROFESSIONAL_TIER_MAX_FILE_SIZE="100MB"

# ============================================================================
# LOGGING AND MONITORING
# ============================================================================
LOG_LEVEL="info"
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# ============================================================================
# EMAIL CONFIGURATION (for scheduled reports)
# ============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="reports@medspasync.com"

# ============================================================================
# AZURE KEY VAULT (if using)
# ============================================================================
AZURE_KEY_VAULT_NAME="your-key-vault-name"
AZURE_TENANT_ID="your-tenant-id"
AZURE_CLIENT_ID="your-client-id"
AZURE_CLIENT_SECRET="your-client-secret"

# ============================================================================
# REDIS CACHE (optional, for performance)
# ============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your-redis-password"

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================
WEBHOOK_SECRET="your-webhook-secret-key"
ENABLE_WEBHOOKS=true

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# DATA RETENTION (in days)
# ============================================================================
CORE_TIER_DATA_RETENTION=30
PROFESSIONAL_TIER_DATA_RETENTION=365

# ============================================================================
# AI INSIGHTS CONFIGURATION
# ============================================================================
ENABLE_AI_INSIGHTS=true
AI_MODEL_ENDPOINT="https://api.openai.com/v1"
AI_API_KEY="your-openai-api-key"

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGIN="https://your-frontend-domain.com"
CORS_CREDENTIALS=true

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=3000
HOST="0.0.0.0"
TRUST_PROXY=true

# ============================================================================
# HEALTH CHECK
# ============================================================================
HEALTH_CHECK_ENDPOINT="/health"
HEALTH_CHECK_INTERVAL=30000 