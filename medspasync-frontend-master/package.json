{
  "name": "medspasync-root",
  "version": "1.0.0",
  "description": "Root package for MedSpaSync ecosystem test runner",
  "main": "test_ecosystem.js",
  "scripts": {
    "test": "node test_ecosystem.js",
    "test:parallel": "concurrently \"npm run test:frontend\" \"npm run test:backend\" \"npm run test:ai-api\" \"npm run test:marketing\"",
    "test:changed": "npm run test:frontend:changed && npm run test:backend:changed",
    "test:watch": "concurrently \"npm run test:frontend:watch\" \"npm run test:backend:watch\"",
    "test:coverage": "npm run test:frontend:coverage && npm run test:backend:coverage",
    "test:frontend": "cd ./medspasync-frontend && npm run test",
    "test:frontend:changed": "cd ./medspasync-frontend && npm run test:changed",
    "test:frontend:watch": "cd ./medspasync-frontend && npm run test:watch",
    "test:frontend:coverage": "cd ./medspasync-frontend && npm run test:coverage",
    "test:backend": "cd ./medspasync-backend && npm run test",
    "test:backend:changed": "cd ./medspasync-backend && npm run test:changed",
    "test:backend:watch": "cd ./medspasync-backend && npm run test:watch",
    "test:backend:coverage": "cd ./medspasync-backend && npm run test:coverage",
    "test:ai-api": "cd ./medspasync-ai-api && npm run test",
    "test:marketing": "cd ./medspasync-marketing && npm run test",
    "build:parallel": "concurrently \"npm run build:frontend\" \"npm run build:backend\"",
    "build:incremental": "npm run build:frontend:incremental && npm run build:backend:incremental",
    "build:frontend": "cd ./medspasync-frontend && npm run build",
    "build:frontend:incremental": "cd ./medspasync-frontend && npm run build:incremental",
    "build:backend": "cd ./medspasync-backend && npm run build",
    "build:backend:incremental": "cd ./medspasync-backend && npm run build:incremental",
    "dev:fast": "powershell -ExecutionPolicy Bypass -File start-dev.ps1",
    "dev:frontend:fast": "cd ./medspasync-frontend && npm run dev:fast",
    "dev:backend:fast": "cd ./medspasync-backend && npm run dev:fast",
    "install:fast": "npm ci --prefer-offline && npm run install:submodules",
    "install:submodules": "concurrently \"cd ./medspasync-frontend && npm ci --prefer-offline\" \"cd ./medspasync-backend && npm ci --prefer-offline\" \"cd ./medspasync-ai-api && npm ci --prefer-offline\" \"cd ./medspasync-marketing && npm ci --prefer-offline\"",
    "clean": "npm run clean:all",
    "clean:all": "concurrently \"cd ./medspasync-frontend && npm run clean\" \"cd ./medspasync-backend && npm run clean\" \"cd ./medspasync-ai-api && npm run clean\" \"cd ./medspasync-marketing && npm run clean\"",
    "optimize": "npm run optimize:memory && npm run optimize:build",
    "optimize:memory": "node --max-old-space-size=8192 scripts/optimize-memory.js",
    "optimize:build": "node scripts/optimize-build.js",
    "monitor": "concurrently \"npm run monitor:performance\" \"npm run monitor:memory\" \"npm run monitor:tests\"",
    "monitor:performance": "node scripts/monitor-performance.js",
    "monitor:memory": "node scripts/monitor-memory.js",
    "monitor:tests": "node scripts/monitor-tests.js"
  },
  "dependencies": {
    "@prisma/client": "^6.11.0",
    "axios": "^1.10.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "prisma": "^6.11.0",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "babel-jest": "^30.0.4",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "eslint-plugin-react-hooks": "^4.6.0"
  }
}
