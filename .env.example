# ========================================
# MedSpaSync Pro Environment Configuration Template
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ========================================
# Frontend Configuration (Vite)
# ========================================

# Application Configuration
VITE_APP_NAME=MedSpaSync Pro
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=15000
VITE_API_RETRY_ATTEMPTS=3

# Backend URLs by Environment
VITE_API_BASE_URL_DEV=http://localhost:3000
VITE_API_BASE_URL_STAGING=https://staging-api.medspasyncpro.com
VITE_API_BASE_URL_PROD=https://api.medspasyncpro.com

# Build Configuration
VITE_BASE_PATH=/

# ========================================
# Backend Configuration (Node.js/Express)
# ========================================

# Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@localhost:5432/YOUR_DB_NAME
POSTGRES_USER=YOUR_DB_USER
POSTGRES_PASSWORD=YOUR_DB_PASSWORD
POSTGRES_DB=medspasync

# MongoDB Configuration (for legacy data)
MONGO_URI=mongodb://YOUR_MONGO_USER:YOUR_MONGO_PASSWORD@localhost:27017/YOUR_DB_NAME
MONGO_ROOT_USER=YOUR_MONGO_USER
MONGO_ROOT_PASSWORD=YOUR_MONGO_PASSWORD

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# Authentication & Security
JWT_SECRET=YOUR_JWT_SECRET_HERE_MIN_32_CHARS
JWT_REFRESH_SECRET=YOUR_JWT_REFRESH_SECRET_HERE_MIN_32_CHARS
ENV_ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_HERE_32_CHARS

# Payment Processing
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# AI/ML Service Configuration
ML_SERVICE_URL=http://localhost:8000
AI_API_KEY=YOUR_AI_API_KEY_HERE
PYTHON_AI_URL=http://localhost:8000

# Email Configuration
EMAIL_USER=YOUR_EMAIL_USERNAME
EMAIL_PASSWORD=YOUR_EMAIL_PASSWORD
EMAIL_FROM=noreply@medspasyncpro.com

# Azure Key Vault (Production)
AZURE_CLIENT_ID=YOUR_AZURE_CLIENT_ID
AZURE_CLIENT_SECRET=YOUR_AZURE_CLIENT_SECRET
AZURE_TENANT_ID=YOUR_AZURE_TENANT_ID
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Monitoring & Analytics
GRAFANA_PASSWORD=YOUR_GRAFANA_ADMIN_PASSWORD

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://medspasyncpro.com,https://www.medspasyncpro.com,https://staging.medspasyncpro.com,https://demo.medspasyncpro.com

# Application Limits
UPLOAD_MAX_MB=50
DEFAULT_CONFIDENCE_THRESHOLD=0.85
PROCESSING_BATCH_SIZE=500
MAX_TRANSACTIONS_PER_JOB=100000
AI_TIMEOUT=900000
MAX_CONCURRENT_AI_JOBS=10
JOB_RETENTION_DAYS=90
MAX_JOBS_PER_USER=1000

# Trial Configuration
ENABLE_TRIAL=true
TRIAL_DAYS=14

# ========================================
# Python AI Service Configuration
# ========================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ML Configuration
MAX_WORKERS=4
BATCH_SIZE=100
MODEL_THRESHOLD=0.95

# ========================================
# Security Notes
# ========================================
# 1. Generate strong passwords with: openssl rand -base64 32
# 2. JWT secrets should be at least 32 characters long
# 3. Use different secrets for development, staging, and production
# 4. Never share these credentials or commit them to version control
# 5. Rotate secrets regularly in production environments