# ========================================
# MedSpaSync Pro Frontend Environment Configuration
# ========================================

# Application Configuration
VITE_APP_NAME=MedSpaSync Pro
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# API Configuration
VITE_API_BASE_URL=http://localhost:5000
VITE_API_TIMEOUT=15000
VITE_API_RETRY_ATTEMPTS=3

# Backend URLs by Environment
# Development
VITE_API_BASE_URL_DEV=http://localhost:5000
# Staging  
VITE_API_BASE_URL_STAGING=https://staging-api.medspasyncpro.com
# Production
VITE_API_BASE_URL_PROD=https://api.medspasyncpro.com

# Feature Flags
VITE_ENABLE_AI_RECONCILIATION=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_HOT_RELOAD=true

# Authentication
VITE_AUTH_STORAGE_KEY=medspa_auth_token
VITE_REFRESH_TOKEN_KEY=medspa_refresh_token
VITE_SESSION_TIMEOUT=3600000

# UI Configuration
VITE_THEME=light
VITE_LANGUAGE=en
VITE_TIMEZONE=UTC
VITE_DATE_FORMAT=MM/DD/YYYY
VITE_TIME_FORMAT=HH:mm

# Performance
VITE_ENABLE_CACHE=true
VITE_CACHE_DURATION=300000
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_SOURCEMAPS=true

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_XSS_PROTECTION=true

# Monitoring
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_SENTRY_DSN=

# External Services
VITE_STATUS_PAGE_URL=https://status.medspasyncpro.com
VITE_SUPPORT_EMAIL=support@medspasyncpro.com
VITE_DOCUMENTATION_URL=https://docs.medspasyncpro.com

# Development Tools
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_MOCK_DATA=false
VITE_MOCK_API_DELAY=500

# Build Configuration
VITE_BASE_PATH=/
VITE_BUILD_TARGET=esnext
VITE_MINIFY=true
VITE_SPLIT_CHUNKS=true

